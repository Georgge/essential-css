@import 'specific-mixins'

header-static()
  flexbox(space-between, center)
  width: 100vw
  max-width: 100vw
  height: $headerHeight
  position: fixed
  top: 0
  right: 0
  left: 0
  padding-left: $gpm
  padding-right: $gpm
  box-sizing: border-box
  if $testColor
    background-color: $orange


menu-left()
  flex-direction: row

menu-right()
  flex-direction: row-reverse

menu-container(width = 32px, height = 32px)
  width: width 
  height: height
  if $testColor
    background-color: $magenta

menu-image(icon)
  width: 100%
  height: 100%
  display: inline-block
  background-size: cover
  if icon
    background-image: url(icon)
  else
    background-image: url('../assets/menu-button.png')

menu-tags(position = true)
  flexbox(center, center, wrap)
  position: absolute
  if position
    right: 100vw
  else
    right: -100vw
  top: 0
  width: 100vw
  height: 100vh
  min-width: 100vw
  padding: $gpm
  box-sizing: border-box
  transition: all 0.4s ease
  &:after
    content: ""
    height: 10%
    width: 100%
  > a
    display: inline-block
    min-width: 55%
    text-align: center
    text-decoration-line: none
    color: $yellow

  > span
    display: inline-block
    color: $cyan
    position: absolute
    top: 10px
    left: 10px
    font-size: 3rem
    cursor: pointer
    line-height: 1rem

  if $testColor
    background-color: $purple

menu-displacement()
  right: 0