header-static()
  width: 100vw
  max-width: 100vw
  height: $headerHeight
  position: fixed
  top: 0
  right: 0
  left: 0
  display: flex
  flex-wrap: nowrap
  justify-content: space-between
  align-items: center
  padding-left: $gpm
  padding-right: $gpm
  box-sizing: border-box
  if $testColor
    background-color: $orange

menu-container-left(width = 32px, height = 32px)
  width: width 
  height: height
  if $testColor
    background-color: $magenta

menu-image(icon)
  width: 100%
  height: 100%
  display: inline-block
  background-size: cover
  if icon
    background-image: url(icon)
  else
    background-image: url('../assets/menu-button.png')

menu-tags()
  position: absolute
  right: 100vw
  top: 0
  width: 100vw
  height: 100vh
  min-width: 100vw
  padding: $gpm
  display: flex
  justify-content: center
  align-items: center
  flex-wrap: wrap
  &:after
    content: ""
    height: 10%
    width: 100%
  > a
    display: inline-block
    min-width: 55%
    text-align: center
  
  if $testColor
    background-color: $purple

menu-displacement()
  right: 0